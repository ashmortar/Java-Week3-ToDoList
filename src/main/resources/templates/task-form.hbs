{{#partial "content"}}

    {{#if editTask}}
        <h3>E d i t - T a s k</h3>
        <form action="/tasks/{{editTask.id}}/update" method="post">
            <label for="description"><em>task description</em></label>
            <input id="description" name="description" type="text" value="{{editTask.description}}" class="form-control">

    {{else}}
        {{#if categories}}
                <h3><em>A d d - T a s k</em></h3>
            <form action="/categories/{{id}}/tasks/new" method="post" id="form">
                <label for="description"><em>task description</em></label>
            <br>
                <input id="description" name="description" type="text" class="form-control">
        {{/if}}

    {{/if}}
    <br>
        <button type="submit" class="btn btn-default">save</button>
    </form>
{{/partial}}

{{> layout.hbs}}