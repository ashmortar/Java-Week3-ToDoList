{{#partial "content"}}
    {{#if category}}
        <h3><em>{{category.name}}</em> <small><a href="/categories/{{category.id}}/update"> - update name</a></small></h3>
        <ul>
        {{#each tasksInCategory}}
            <li>{{description}}</li>
        {{/each}}
        </ul>
        <hr>
        <p><a href="/categories/{{category.id}}/tasks/new">- add new task</a></p>
    {{/if}}
{{/partial}}

{{> layout.hbs}}